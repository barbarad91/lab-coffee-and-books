<div class="container">

  <div class="row">
    <div class="col-6 mt-3">
      <form action="/edit/{{place.id}}" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" id="name" value="{{place.name}}">
        </div>
        <div class="form-row">
          <div class="col">
            <div class="form-group">
              <label for="latitude">Latitude</label>
              <input name="latitude" type="text" class="form-control" id="latitude" value="{{latitude}}">
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="longitude">Longitude</label>
              <input name="longitude" type="text" class="form-control" id="longitude" value="{{longitude}}">
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>