<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>Check our {{type}}s</h1>
    </div>
  </div>

  {{#each placesList}}
  <div class="row justify-content-center mt-3">
    <div class="col-md-6 ">
      <p>{{name}}</p>
    </div>
    <div class="col-md-2 text-right">
      <a class="btn btn-dark" href="/details/{{id}}">See more</a>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <hr>
    </div>
  </div>

  {{/each}}

  <div class="row justify-content-center">
    <div class="col-8">
      <figure id='map'></figure>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="/javascripts/basic-map-config.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key={{apiKey}}&callback=initMap{{type}}"></script>
</div>